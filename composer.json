{
    "name": "mapali/codex-dump",
    "version": "0.0.1",
    "description": "Export all PHP files in a Laravel codebase into a single file for AI ingestion or analysis.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mapali\\CodexDump\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mapali\\CodexDump\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/phpstan": "^2.1",
        "larastan/larastan": "^3.4",
        "laravel/pint": "^1.22"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mapali\\CodexDump\\CodexDumpServiceProvider"
            ]
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
